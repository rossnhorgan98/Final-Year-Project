@{
    ViewData["Title"] = "Map";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>ArcGIS API for JavaScript Hello World App</title>
    <style>
        html, body, #viewDiv {
            padding: 0;
            margin: 0;
            height: 100%;
            width: 100%;
        }
    </style>

    <link rel="stylesheet" href="~/4.14/esri/css/main.css">
    <script src="~/4.14/"></script>

    <script>
        require([
            "~/4.14/esri/Map.js",
            "~/4.14/esri/views/MapView.js"
        ], function (Map, MapView) {

            var map = new Map({
                basemap: "topo-vector"
            });

            var view = new MapView({
                container: "viewDiv",
                map: map,
                center: [-118.71511, 34.09042],
                zoom: 11
            });

        });
    </script>
</head>
<body>
    <div id="viewDiv"></div>
</body>
</html>
