    <h2>Select Country</h2>
    <h3>Europe</h3>
    <ul class="list-group-horizontal">
        @foreach (var item in Model.Where(c => c.Continent.Equals("Europe")))
        {
            <li class="nav-item"><a asp-controller="Home" asp-action="CountryProfile" asp-route-id="@item.CountryId">@Html.DisplayFor(modelItem => item.Name)</a></li>
        }
    </ul>
