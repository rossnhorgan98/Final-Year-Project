    } <!--Source: https://stackoverflow.com/a/25698547 -->

    <table class="table" id="tblPopulation" style="display:none;">
        <thead>
            <tr>
                <th>Rank</th>
                <th>City</th>
                <th>Population</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(m => m.Population))
            {
                <tr>
                    <td>
                        @(populationRank += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Population)
                    </td>
                </tr>
            }
        </tbody>
    </table>

